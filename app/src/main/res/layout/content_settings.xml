<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ninja.oliverwerner.kassensystem_v12.SettingsActivity"
    tools:showIn="@layout/app_bar_settings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:text="GeschÃ¤ftsname"
                android:layout_height="wrap_content"
                android:id="@+id/shop_name"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/shop_edit"
                android:layout_width="150dp" />

            <Button
                android:text="save"
                android:layout_height="wrap_content"
                android:id="@+id/shop_save"
                android:layout_weight="0.30"
                android:layout_width="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.02">

            <TextView
                android:text="Theme-Colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/colour_name"
                android:layout_weight="0.58" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/colour_edit"
                android:layout_width="150dp" />

            <Button
                android:text="Save"
                android:layout_height="wrap_content"
                android:id="@+id/colour_save"
                android:layout_width="50dp"
                android:layout_weight="0.32" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
